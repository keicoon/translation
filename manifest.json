{
    "name": "Translation Extension",
    "description": "so ea-sy",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "main.html",
        "default_icon": "default_icon.jpg"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+T"
            },
            "description": "HotKey"
        }
    },
    "permissions": [
        "storage",
        "activeTab",
        "http://openapi.naver.com/v1/papago/n2mt",
        "https://openapi.naver.com/v1/papago/n2mt"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}